<div class="bundle-data machine-latest">

    <div class="bundle-data-container-title">
        <div class="data-col-title">'@Bundle.Bundle.MachineName' gépről '@Bundle.Bundle.FinishedDate.ToString("G")'-kor lejött rakat</div>
    </div>

    <MediaQuery Media="@Breakpoints.LargeUp">
        <Matched>
            <div class="bundle-data-container">
                <div class="data-col">
                    <div class="row d-block">
                        <div class="bundle-data-container">
                            <div class="data-col">Bemenő méter</div>
                            <div class="data-col">@Bundle.Bundle.Input.RoundTo0DecimalDigits() M</div>
                        </div>
                    </div>
                    <div class="row d-block">
                        <div class="bundle-data-container">
                            <div class="data-col">Legyártott jó méter</div>
                            <div class="data-col">@Bundle.Bundle.Produced.RoundTo0DecimalDigits() M</div>
                        </div>
                    </div>
                    <div class="row d-block">
                        <div class="bundle-data-container">
                            <div class="data-col">Legyártott hossztoldó méter</div>
                            <div class="data-col">@Bundle.Bundle.FS.RoundTo0DecimalDigits() M</div>
                        </div>
                    </div>
                    <div class="row d-block">
                        <div class="bundle-data-container">
                            <div class="data-col">Dimenzió</div>
                            <div class="data-col">@Bundle.Bundle.Dimension</div>
                        </div>
                    </div>
                    <div class="row d-block">
                        <div class="bundle-data-container">
                            <div class="data-col">Minőség</div>
                            <div class="data-col">@Bundle.Bundle.Quality</div>
                        </div>
                    </div>
                    <div class="row d-block">
                        <div class="bundle-data-container">
                            <div class="data-col">Beszállító</div>
                            <div class="data-col">@Bundle.Bundle.VendorName / @Bundle.Bundle.SawmillName</div>
                        </div>
                    </div>
                    <div class="row d-block">
                        <div class="bundle-data-container">
                            <div class="data-col">Selejt%</div>
                            <div class="data-col">@((Bundle.Bundle.WastePercentage * 100).RoundTo2DecimalDigits()) %</div>
                        </div>
                    </div>
                </div>
                <div class="data-col d-flex align-items-center" style="height:350px;"><TCOGauge Height="350" GaugeID="machine-latest" TCO="Bundle.TCO" /></div>
            </div>
        </Matched>
        <Unmatched>
            <div class="bundle-data-container">
                <div class="data-col">Bemenő méter</div>
                <div class="data-col">@Bundle.Bundle.Input.RoundTo0DecimalDigits() M</div>
            </div>
            <div class="bundle-data-container">
                <div class="data-col">Legyártott jó méter</div>
                <div class="data-col">@Bundle.Bundle.Produced.RoundTo0DecimalDigits() M</div>
            </div>
            <div class="bundle-data-container">
                <div class="data-col">Legyártott hossztoldó méter</div>
                <div class="data-col">@Bundle.Bundle.FS.RoundTo0DecimalDigits() M</div>
            </div>
            <div class="bundle-data-container">
                <div class="data-col">Dimenzió</div>
                <div class="data-col">@Bundle.Bundle.Dimension</div>
            </div>
            <div class="bundle-data-container">
                <div class="data-col">Minőség</div>
                <div class="data-col">@Bundle.Bundle.Quality</div>
            </div>
            <div class="bundle-data-container">
                <div class="data-col">Beszállító</div>
                <div class="data-col">@Bundle.Bundle.VendorName</div>
            </div>
            <div class="bundle-data-container">
                <div class="data-col">Fűrészüzem</div>
                <div class="data-col">@Bundle.Bundle.SawmillName</div>
            </div>
            <div class="bundle-data-container">
                <div class="data-col">Selejt%</div>
                <div class="data-col">@((Bundle.Bundle.WastePercentage * 100).RoundTo2DecimalDigits()) %</div>
            </div>
            <div class="data-col" style="height:500px;"><TCOGauge GaugeID="machine-latest" TCO="Bundle.TCO" /></div>
        </Unmatched>
    </MediaQuery>

    @if (Bundle.CategoryBulbs != default)
    {
        <CategoryBulbs MaxinARow="4" ValidationResults="Bundle.CategoryBulbs.ToList()" />
    }
</div>

@code
{
    [Parameter]
    public LatestBundleViewModel Bundle { get; set; }
}
